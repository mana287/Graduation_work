<div class="container-fluid">
  <div class="row">
    <%= render "shared/sidebar" %>

    <main class="col py-4">
      <h1 class="h4 mb-3">記事一覧</h1>

      <% if @articles.any? %>
        <div class="row g-4">
          <% @articles.each do |article| %>
            <div class="col-12 col-md-6 col-lg-4">
              <div class="card h-100 shadow-sm">
                <%= link_to article_path(article), class: "d-block text-decoration-none" do %>
                  <% if article.image.attached? %>
                    <%= image_tag article.image,
                          class: "card-img-top",
                          style: "height: 220px; object-fit: cover;",
                          alt: article.title %>
                  <% else %>
                    <div class="bg-light d-flex align-items-center justify-content-center"
                         style="height: 220px;">
                      <span class="text-muted">画像なし</span>
                    </div>
                  <% end %>
                <% end %>

                <div class="card-body">
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="small text-muted">
                      <i class="bi bi-person"></i>
                      <%= article.user&.name || article.guest_name || "ゲスト" %>
                    </div>
                    <div class="small">
                      <i class="bi bi-hand-thumbs-up"></i>
                      <%= article.respond_to?(:likes_count) ? article.likes_count.to_i : 0 %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="alert alert-light border text-center">まだ記事がありません</div>
      <% end %>
    </main>
  </div>
</div>
