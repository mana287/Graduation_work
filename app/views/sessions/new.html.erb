<div class="container py-5" style="max-width: 420px;">
  <h1 class="h4 mb-4">ログイン</h1>

  <%= form_with url: login_path, method: :post, local: true do |f| %>
    <div class="mb-3">
      <%= label_tag :email, "メールアドレス", class: "form-label" %>
      <%= email_field_tag :email, params[:email], class: "form-control", required: true %>
    </div>

    <div class="mb-4">
      <%= label_tag :password, "パスワード", class: "form-label" %>
      <%= password_field_tag :password, nil, class: "form-control", required: true %>
    </div>

    <%= submit_tag "ログイン", class: "btn btn-primary w-100" %>
  <% end %>
</div>
