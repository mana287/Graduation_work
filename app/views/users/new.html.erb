<div class="container py-5" style="max-width: 520px;">
  <h1 class="h4 mb-4">新規登録</h1>

  <%= form_with model: @user, url: users_path, local: true do |f| %>
    <% if @user.errors.any? %>
      <div class="alert alert-danger">
        <ul class="mb-0">
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= f.label :name, "名前", class: "form-label" %>
      <%= f.text_field :name, class: "form-control", required: true %>
    </div>

    <div class="mb-3">
      <%= f.label :email, "メールアドレス", class: "form-label" %>
      <%= f.email_field :email, class: "form-control", required: true %>
    </div>

    <div class="mb-3">
      <%= f.label :password, "パスワード（6文字以上）", class: "form-label" %>
      <%= f.password_field :password, class: "form-control", required: true, minlength: 6 %>
    </div>

    <div class="mb-4">
      <%= f.label :password_confirmation, "パスワード（確認）", class: "form-label" %>
      <%= f.password_field :password_confirmation, class: "form-control", required: true, minlength: 6 %>
    </div>

    <%= f.submit "登録する", class: "btn btn-primary w-100" %>
  <% end %>
</div>
